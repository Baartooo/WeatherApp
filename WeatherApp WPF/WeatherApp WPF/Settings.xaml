<Window x:Class="WeatherApp_WPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp_WPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Settings" Height="350" Width="300">
    <Grid Background="#8c94a1">
        <StackPanel Margin="21,45,20,65">
            <Label Foreground="White" Content="City:"/>
            <TextBox x:Name="CityNameTextBox"/>
            <Label Foreground="White" Content="Date (optional) :"/>
            <DatePicker x:Name="DatePicker"/>
            <Button Margin="20" Content="SEARCH" Click="SearchWeather"/>


        </StackPanel>
        <Image Margin="27,207,233,80" Source="/img/info_icon.png"   />
        <Label Foreground="White" Content="If you don't pick any date," Height="35" Margin="55,204,29,82"/>
        <Label Foreground="White" Content="you'll get forecast for next three days." Height="35" Margin="45,225,20,61"/>
    </Grid>
</Window>
