        <Image Margin="175,224,518,190" Stretch="Fill" x:Name="DayTwoWeatherImage"/>
        <Label Content="" HorizontalAlignment="Left" Margin="175,325,0,0" VerticalAlignment="Top" Foreground="White" FontSize="12" FontWeight="Bold" Width="100" x:Name="DayTwoTemp" RenderTransformOrigin="0.206,0.151"/>
