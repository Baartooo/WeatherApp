        <Label Content="" HorizontalAlignment="Left" Margin="10,325,0,0" VerticalAlignment="Top" Foreground="White" FontSize="12" FontWeight="Bold" Width="100" x:Name="DayOneTemp"/>
        <Label Content="" HorizontalAlignment="Left" Margin="10,359,0,0" VerticalAlignment="Top" Foreground="White" FontSize="12" FontWeight="Bold" Width="100" x:Name="DayOneAtm"/>


